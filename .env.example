# Database
DATABASE_URL="mysql://user:password@host:3306/database"

# Authentication & OAuth
JWT_SECRET="your-secret-key-change-this-in-production"
OAUTH_SERVER_URL="https://your-oauth-server.com"
OWNER_OPEN_ID="your-owner-open-id"
VITE_APP_ID="your-app-id"

# Built-in Forge API (optional)
BUILT_IN_FORGE_API_URL=""
BUILT_IN_FORGE_API_KEY=""

# Email Configuration (for reports)
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-app-specific-password"
DEFAULT_REPORT_EMAIL="recipient@example.com"

# Server Configuration
NODE_ENV="production"
PORT="3000"

# Python Scraper API (for Vercel deployment)
# You'll need to deploy the Python scraper separately
# SCRAPER_API_URL="https://your-scraper-api.railway.app"

# OpenAI Configuration (for AI Chat and Pricing recommendations)
OPENAI_API_KEY="your-openai-api-key"

# OnlyNight API Configuration (for real-time price search and archive data)
ONLYNIGHT_API_URL="https://api.onlynight.com"
ONLYNIGHT_CLIENT_SECRET="your-onlynight-client-secret"

# Advanced Scraper Configuration
# Proxy Settings (for anti-bot and IP rotation)
PROXY_TYPE="brightdata"                    # Options: http, socks5, brightdata, oxylabs
PROXY_URL="brd.superproxy.io:22225"        # Proxy server URL
PROXY_USERNAME="your-proxy-username"       # Proxy username
PROXY_PASSWORD="your-proxy-password"       # Proxy password
PROXY_COUNTRY="il"                         # Country code for geo-targeting (optional)
PROXY_ROTATION_INTERVAL="10"               # Rotate proxy after N requests

# Scraper Behavior
SCRAPER_DELAY_BETWEEN_REQUESTS="1000"      # Milliseconds delay between requests
SCRAPER_CONCURRENT_REQUESTS="1"            # Number of concurrent requests
SCRAPER_ENABLE_SCREENSHOTS="false"         # Capture screenshots on scrape
SCRAPER_ENABLE_CHANGE_DETECTION="true"     # Enable price change detection
SCRAPER_ENABLE_BROWSER_STEPS="true"        # Use browser automation steps
SCRAPER_ENABLE_JSON_EXTRACTION="true"      # Extract prices from embedded JSON
